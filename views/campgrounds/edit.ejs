<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center"> Edit Campgrounds</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT " method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" value="<%= campground.title %>" id="title" name="campground[title]" required>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="location">Location </label>
                    <input class="form-control" value="<%= campground.location %>" type="text" id="location" name="campground[location]" required>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input type="text" class="form-control" value="<%= campground.image %>"  id="image" name="campground[image]" required>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">Rs</span>
                        <input type="text" class="form-control"
                        value="<%= campground.price%>"  placeholder="0.00" aria-label="Price"
                            name="campground[price]" aria-describedby="basic-addon1" required>
                    </div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" name="campground[description]" required>
                        <%= campground.description %> 
                        </textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Edit Campground</button>
                </div>
            </form>
            <a href="/campgrounds">All campgrounds</a>
        </div>
    </div>
